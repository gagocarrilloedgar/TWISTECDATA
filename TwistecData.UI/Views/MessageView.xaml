<Window x:Class="TwistecData.UI.Views.MessageView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwistecData.UI.Views"
        mc:Ignorable="d"
        Title="MessageView" Height="150
        " Width="450"
        DataContext="{Binding ShowMessage, Source={StaticResource Locator}}">
    <Grid>
        
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap"
                   Text="{Binding Message}" VerticalAlignment="Top" Margin="84,40,0,0"/>
        
        <Button Content="OK" HorizontalAlignment="Left" Margin="177,74,0,0" VerticalAlignment="Top"
                Width="75" Click="Button_Click"/>
    </Grid>
</Window>
